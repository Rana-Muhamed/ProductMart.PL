
@model IEnumerable<ProductsViewModel>
@{
    ViewData["Title"] = "Products";
}

@if (TempData["Message"] is not null)
{
    <div class="alert alert-primary mt-3">
        @TempData["Message"];
    </div>
}



<h1>All Products</h1>
<br />
<br />
<a asp-action="Create" class=" btn btn-primary">Create New Product</a>
<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="SearchValue" placeholder="search by Category" />
        </div>
        <div class="col-4">
            <input type="submit" value="search" class="btn btn-success" />
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table class=" table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(P => P.Name)</td>
                <td>@Html.DisplayNameFor(P => P.CreationDate)</td>
                <td>@Html.DisplayNameFor(P => P.StartDate)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var products in Model)
            {
                <tr>
                    <td>@products.Name</td>
                    <td>@products.CreationDate</td>
                    <td>@products.StartDate</td>
@*                    <td>
                        <a asp-action="Details" asp-route-id="@Model" class=" btn btn-warning"><i class="fas fa-eye"></i> Details</a>

                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@Model" class=" btn btn-success"><i class="fas fa-edit"></i> Update</a>

                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@Model" class=" btn btn-danger">   <i class="fas fa-trash"></i> Delete</a>

                    </td>*@
                    <partial name="_ButtonsPartialView" model="@products.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class=" mt-4 alert alert-warning">
        <h3>There is No Product</h3>

    </div>
}


