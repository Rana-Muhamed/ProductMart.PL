@model IEnumerable<ProductsViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Products</h1>
<br />
<br />
<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="SearchValue" placeholder="search by Category" />
        </div>
        <div class="col-4">
            <input type="submit" value="search" class="btn btn-success" />
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table class=" table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(P => P.Name)</td>
                <td>@Html.DisplayNameFor(P => P.CreationDate)</td>
                <td>@Html.DisplayNameFor(P => P.StartDate)</td>
                <td>@Html.DisplayNameFor(P => P.Price)</td>
                <td>Details</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var products in Model)
            {
                <tr>
                    <td>@products.Name</td>
                    <td>@products.CreationDate</td>
                    <td>@products.StartDate</td>
                    <td>@products.Price</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@products.Id" class=" btn btn-warning" ><i class="fas fa-eye"></i> Details</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class=" mt-4 alert alert-warning">
        <h3>There is No Product</h3>

    </div>
}